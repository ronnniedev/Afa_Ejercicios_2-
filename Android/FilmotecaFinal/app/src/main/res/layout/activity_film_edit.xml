<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/palomitas"
    tools:context=".FilmEditActivity">

    <ImageView
        android:id="@+id/imagenPeliculaEdit"
        android:layout_width="195dp"
        android:layout_height="180dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toTopOf="@+id/guardarFilm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/guardarFilm"
        android:layout_width="176dp"
        android:layout_height="50dp"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="301dp"
        android:text="@string/Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancelar"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="173dp"
        android:layout_height="50dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="301dp"
        android:text="@string/Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guardarFilm" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="56dp"
        android:text="@string/Editando"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/vueltas"
        android:layout_width="406dp"
        android:background="@color/white"
        android:entries="@array/valores_spinner"
        android:layout_height="81dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="49dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guardarFilm" />
</androidx.constraintlayout.widget.ConstraintLayout>